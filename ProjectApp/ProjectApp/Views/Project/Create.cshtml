@model ProjectCreateViewModel

    <form asp-controller="Project" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="CompletionDate">Completed on</label>
            <input type="date" asp-for="CompletionDate" />
        </div>
        <div class="form-group">
            <label asp-for="Statuses">Status</label>
            <select asp-for="@Model.SelectedStatus" asp-items="@Model.Statuses">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="SelectedTags"></label>
            <select multiple class="form-control" asp-for="@Model.SelectedTags" asp-items="@Model.Tags"></select>
            <span class="text-danger" asp-validation-for="SelectedTags"></span>
        </div>
        <button class="btn-success" type="submit">Create</button>
    </form>
